<PropertyList>
	<path>cockpit.ac</path>

	<!-- Suppress/Hide Mono Cockpit Models -->
  <animation>
    <type>select</type>
    <object-name>AD_LOD_100_M</object-name>
    <object-name>MonoBox</object-name>
    <condition>
      <property>/sim/model/mono-cockpit-enabled</property>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>AD_LOD_100</object-name>
    <condition>
      <not>
        <property>/sim/model/mono-cockpit-enabled</property>
      </not>
    </condition>
  </animation>
</PropertyList>